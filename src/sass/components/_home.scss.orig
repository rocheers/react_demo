nav {
    & ul {
        list-style: none;
        display: flex;
        justify-content: space-around;

        & li {
            display: inline-block;
            border: solid 2px steelblue;
            width: 100px;
            height: 25px;
            text-align: center;
            line-height: 25px;
            border-radius: 10px;
            transition: background 0.2s, color 0.2s;

            &:hover {
                background: steelblue;
                & .link {
                    color: white;
                }
            }

            & .link {
                text-decoration: none;
                font-size: 20px;
            }
        }
    }
}

section {
    margin: 0;
    padding: 0;
}